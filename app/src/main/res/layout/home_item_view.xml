<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/iv_home_item_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/music_bg"/>

        <ImageView
            android:id="@+id/iv_home_item_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:src="@mipmap/home_page_live"/>

        <TextView
            android:id="@+id/tv_home_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/iv_home_item_icon"
            android:maxLines="1"
            android:text="歌单"
            android:textColor="#0f0"
            android:textSize="25sp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/tv_home_item_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_home_item_title"
            android:layout_toRightOf="@+id/iv_home_item_icon"
            android:maxLines="1"
            android:text="简介"
            android:textColor="#fff"
            android:textSize="20sp"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>
